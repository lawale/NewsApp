                                <Label Text="{Binding PublishedAt, Converter={StaticResource DateConvert}, Mode=OneWay}" Grid.Row="3" TextColor="Black" FontSize="20" HorizontalOptions="Center"/>
                                <Button BindingContext="{Binding Source={x:Reference list}, Path=BindingContext}" TextColor="White"
                                        Text="Read Article" BorderRadius="13" BackgroundColor="#1A86F1"
                                        CommandParameter="{Binding Source={x:Reference Item}, Path=BindingContext}"
                                        Command="{Binding ReadArticleCommand}" HorizontalOptions="Center" Grid.Row="4" />
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
