        <ListView x:Name="list" RefreshControlColor="DodgerBlue" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" VerticalOptions="FillAndExpand"
                  ItemsSource="{Binding Articles}" RefreshCommand="{Binding RefreshArticles}" IsPullToRefreshEnabled="True"
                  IsRefreshing="{Binding IsRefreshing}" HasUnevenRows="True" RowHeight="400" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame BackgroundColor="White" Padding="0" Margin="10" OutlineColor="LightGray" IsClippedToBounds="True" CornerRadius="5" HasShadow="True">
                            <Grid x:Name="Item" RowSpacing="10" BackgroundColor="Transparent" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="250"/>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="50" />
                                </Grid.RowDefinitions>
                                <ffimageloading:ExtendedImage ErrorPlaceholder="{Binding ErrorImage}" Margin="0" RetryCount="3" RetryDelay="3000" Source="{Binding UrlToImage}" WidthRequest="200" DownsampleToViewSize="True" DownsampleHeight="200" Aspect="Fill"  Grid.Row="0">
                                    <ffimageloading:ExtendedImage.Behaviors>
                                        <behavior:ImageBehavior />
                                    </ffimageloading:ExtendedImage.Behaviors>
                                    <ffimageloading:ExtendedImage.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped" />
                                    </ffimageloading:ExtendedImage.GestureRecognizers>
                                </ffimageloading:ExtendedImage>

                                <Label Text="{Binding Title}" TextColor="Black" Grid.Row="1" FontSize="25" HorizontalTextAlignment="Center" />
